<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputPath>$(SolutionDir)bin\$(Configuration)\</OutputPath>
    <LangVersion>7.2</LangVersion>
    <DefineConstants>$(DefineConstants);WINDOWS_BUILD;SUPPORTS_NETFX;SUPPORTS_NETCORE</DefineConstants>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Version>0.0.2</Version>
    <AssemblyName>Spfx</AssemblyName>
    <RootNamespace>Spfx</RootNamespace>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>../spfx.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Memory" Version="4.5.1" />
    <PackageReference Include="System.Reflection.Emit" Version="4.3.0" />
    <PackageReference Include="System.Reflection.Emit.ILGeneration" Version="4.3.0" />
    <PackageReference Include="System.Reflection.Emit.Lightweight" Version="4.3.0" />
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.2" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Codegen\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\bin\$(Configuration)\Spfx.Process.Netcore.dll" Link="Spfx.Process.Netcore.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="..\bin\$(Configuration)\Spfx.Process.Netcore32.dll" Link="Spfx.Process.Netcore32.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="..\bin\$(Configuration)\Spfx.Process.Netfx.exe" Link="Spfx.Process.Netfx.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="..\bin\$(Configuration)\Spfx.Process.Netfx32.exe" Link="Spfx.Process.Netfx32.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <EmbeddedResource Include="..\spfx.snk" Link="Properties\spfx.snk" />
  </ItemGroup>

</Project>
