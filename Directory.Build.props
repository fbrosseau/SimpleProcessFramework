<Project>
  <PropertyGroup>
    <LangVersion>7.2</LangVersion>
    <Product>The SimpleProcessFramework</Product>
    <Version>0.0.248</Version>
    <ProductName>The SimpleProcessFramework</ProductName>
    <ProductVersion>$(Version)</ProductVersion>
    <PackageVersion>$(Version)</PackageVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Netcore_Debug' OR '$(Configuration)'=='Netcore_Release'">
    <DefineConstants>$(DefineConstants);UNIX_TESTS_BUILD_ONLY</DefineConstants>
    <SpfxBuildNet48>false</SpfxBuildNet48>
  </PropertyGroup>

  <PropertyGroup Condition="'$(OS)'=='Windows_NT' AND '$(SpfxBuildNet48)'==''">
    <SpfxBuildNet48>true</SpfxBuildNet48>
  </PropertyGroup>

  <PropertyGroup Condition="'$(SpfxBuildNet48)'==''">
    <SpfxBuildNet48>false</SpfxBuildNet48>
  </PropertyGroup>

  <PropertyGroup Condition="'$(AllNetCoreVersions)'==''">
    <AllNetCoreVersions>netcoreapp2.1;netcoreapp2.2;netcoreapp3.0</AllNetCoreVersions>
  </PropertyGroup>

  <PropertyGroup Condition="$(TargetFramework.StartsWith('netcoreapp'))">
    <DefineConstants>$(DefineConstants);NETCOREAPP2_1_PLUS</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='netcoreapp3.0'">
    <DefineConstants>$(DefineConstants);NETCOREAPP3_0_PLUS</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='netstandard2.1'">
    <DefineConstants>$(DefineConstants);NETSTANDARD2_1_PLUS</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(SpfxBuildNet48)'=='true'">
    <SfpxAllTargetPlatforms>net48;$(AllNetCoreVersions)</SfpxAllTargetPlatforms>
  </PropertyGroup>
  <PropertyGroup Condition="'$(SpfxBuildNet48)'=='false'">
    <SfpxAllTargetPlatforms>$(AllNetCoreVersions)</SfpxAllTargetPlatforms>
  </PropertyGroup>  
</Project>